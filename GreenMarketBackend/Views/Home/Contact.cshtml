@{
    ViewData["Title"] = "Contact";
    Layout = "~/Views/Shared/_NavBar.cshtml";
}

<h2 class="text-center mb-4">Contact Us</h2>
    <form asp-action="Contact" method="post">
        <div class="mb-3">
            <label for="name" class="form-label">Name:</label>
            <input type="text" class="form-control" id="name" name="Name" placeholder="Your Name" value="@Model?.Name">
        </div>
        <div class="mb-3">
            <label for="email" class="form-label">Email:</label>
            <input type="email" class="form-control" id="email" name="Email" placeholder="Your Email" value="@Model?.Email">
        </div>
        <div class="mb-3">
            <label for="message" class="form-label">Message:</label>
            <textarea class="form-control" id="message" name="Message" rows="4" placeholder="Your Message">@Model?.Message</textarea>
        </div>
        <div class="form-check mb-3">
            <input class="form-check-input" type="checkbox" name="Subscribe" id="flexCheckDefault" value="true" @(Model?.Subscribe == true ? "checked" : "")>
            <label class="form-check-label" for="flexCheckDefault">
                Subscribe to our weekly newsletter
            </label>
        </div>
        <button type="submit" class="btn btn-success">Send Message</button>
    </form>
</div>