@using GreenMarketBackend.Models.ViewModels.ProductViewModels
@model List<FeatureProductViewModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <!-- Banner Section -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to the Green Market</h1>
            <p class="lead">Your source for fresh, organic, and locally sourced produce</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Shop Now</a>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container my-5" id="products">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        <img src="@Url.Content("~/" + product.MainImageUrl)" class="card-img-top" alt="@product.Name">
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <p class="card-text"><strong>Price:</strong> @product.Price.ToString("C")</p>

                            <!-- Link to the product details page -->
                            <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-success">Buy Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>
