@using GreenMarketBackend.Models.ViewModels.ProductViewModels
@model List<FeatureProductViewModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <!-- Banner Section -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to the Green Market</h1>
            <p class="lead">Your source for fresh, organic, and locally sourced produce</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Shop Now</a>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container my-5" id="products">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-3">
                    <div class="card" style="padding: 10px; margin-bottom: 15px;">
                        <!-- Maintain the aspect ratio and prevent distortion -->
                        <img src="@Url.Content("~/" + product.MainImageUrl)" class="card-img-top" style="width: 100%; height: 150px; object-fit: contain;" alt="@product.Name">
                        <div class="card-body" style="padding: 10px;">
                            <h5 class="card-title" style="font-size: 1.1rem;">@product.Name</h5>
                            <p class="card-text" style="font-size: 0.9rem;">@product.Description</p>

                            <!-- Price and Buy Now button in the same row -->
                            <div class="d-flex justify-content-between align-items-center">
                                <p class="card-text mb-0"><strong>Price:</strong> @product.Price.ToString("C")</p>
                                <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-success">Buy Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>
