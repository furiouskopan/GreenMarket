@using GreenMarketBackend.Models.ViewModels.ProductViewModels
@model List<FeatureProductViewModel>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <!-- Banner Section -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to the Green Market</h1>
            <p class="lead">Your source for fresh, organic, and locally sourced produce</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Shop Now</a>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container my-5" id="products">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4 col-sm-6">
                    <div class="card shadow-sm h-100">
                        <!-- Image: Fixed height and maintain aspect ratio -->
                        <img src="@Url.Content("~/" + product.MainImageUrl)" class="card-img-top" style="width: 100%; height: 200px; object-fit: contain;" alt="@product.Name">

                        <div class="card-body d-flex flex-column">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description lore </p>

                            <!-- Price and Button in the same row -->
                            <div class="mt-auto d-flex justify-content-between align-items-center">
                                <p class="card-text mb-0"><strong>Price:</strong> @product.Price.ToString("C")</p>
                                <a href="@Url.Action("Details", "Products", new { id = product.ProductId })" class="btn btn-success btn-sm">Buy Now</a>
                            </div>
                        </div>
                    </div>
                </div>
            }
        </div>
    </div>
</div>
