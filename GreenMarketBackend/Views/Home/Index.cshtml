@model List<Product>
@{
    ViewData["Title"] = "Home";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div>
    <!-- Banner Section -->
    <div class="jumbotron">
        <div class="container">
            <h1 class="display-4">Welcome to the Green Market</h1>
            <p class="lead">Your source for fresh, organic, and locally sourced produce</p>
            <a class="btn btn-light" asp-controller="Products" asp-action="Index">Shop Now</a>
        </div>
    </div>

    <!-- Products Section -->
    <div class="container my-5" id="products">
        <h2 class="text-center mb-4">Our Products</h2>
        <div class="row g-4">
            @foreach (var product in Model)
            {
                <div class="col-md-4">
                    <div class="card">
                        @if (product.Images != null && product.Images.Any())
                        {
                            var mainImage = product.Images.FirstOrDefault(i => i.IsMain) ?? product.Images.FirstOrDefault();
                            var imageUrl = mainImage != null ? Url.Content("~/" + mainImage.ImageUrl) : Url.Content("~/images/default-product.png");
                            <img src="@imageUrl" class="card-img-top" alt="@product.Name">
                        }
                        else
                        {
                            <img src="~/images/default-product.png" class="card-img-top" alt="@product.Name">
                        }
                        <div class="card-body">
                            <h5 class="card-title">@product.Name</h5>
                            <p class="card-text">@product.Description</p>
                            <a href="#" class="btn btn-success">Buy Now</a>
                        </div>
                    </div>
                </div>
            }
        </div>
</div>
