@model IEnumerable<GreenMarketBackend.Models.Product>

@{
    ViewData["Title"] = "My Products";
    Layout = "_NavBar";
}

<div class="container mt-5">
    <h2>My Products</h2>
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Price</th>
                <th>Stock Quantity</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var product in Model)
            {
                <tr>
                    <td>@product.Name</td>
                    <td>@product.Description</td>
                    <td>@product.Price.ToString("C")</td>
                    <td>@product.StockQuantity</td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@product.ProductId" class="btn btn-warning">Edit</a>
                        <a asp-action="Delete" asp-route-id="@product.ProductId" class="btn btn-danger">Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>
